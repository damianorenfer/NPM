<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin", role: "form"}) do |f| %>
	<h2 class="form-signin-heading">Sign up</h2>
	<%= f.email_field :email, hide_label: :true, autofocus: true, placeholder: "email" %>
	<%= f.password_field :password, hide_label: :true, autocomplete: "off", placeholder: "password" %>
	<%= f.password_field :password_confirmation, hide_label: :true, autocomplete: "off", placeholder: "password confirmation" %>		
		
	<%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"%>	
<% end %>
